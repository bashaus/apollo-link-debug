{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@apollo-link-debug/core": ["packages/core/src/index.ts"],
      "@apollo-link-debug/handle-abort": ["packages/handle-abort/src/index.ts"],
      "@apollo-link-debug/handle-aws-x-ray": [
        "packages/handle-aws-x-ray/src/index.ts"
      ],
      "@apollo-link-debug/handle-errors": [
        "packages/handle-errors/src/index.ts"
      ],
      "@apollo-link-debug/handle-request": [
        "packages/handle-request/src/index.ts"
      ],
      "@apollo-link-debug/handle-timer": ["packages/handle-timer/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
